{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "c:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}${pathSeparator}a.exe"
            ]
        },
        {
            "type": "shell",
            "label": "[BOJ tools] 간채점",
            "command": "C:/Program Files/Python/Python39/python.exe",
            "args": [
                "${workspaceFolder}${pathSeparator}scripts${pathSeparator}Baekjoon Offline Judge${pathSeparator}짭준 오프라인 저지.py",
                "${file}",
                "${fileDirname}${pathSeparator}data",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "[BOJ tools] 문제 구성",
            "command": "C:/Program Files/Python/Python39/python.exe",
            "args": [
                "${workspaceFolder}${pathSeparator}scripts${pathSeparator}Baekjoon Offline Judge${pathSeparator}문제 저장소 구성.py"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}